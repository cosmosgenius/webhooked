{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "eqeqeq": [
            "error", "smart"
        ],
        "no-eq-null": "error",
        "no-console": "off",
        "strict": [
            "error",
            "safe"
        ]
    }
}
